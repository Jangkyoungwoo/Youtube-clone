extends base.pug
block content 
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
    if errorMessage
      span=errorMessage
    label(for="avatar") Avatar
    input(type="file", id="avatar", name="avatar", accept="image/*")
    input(type="text" placeholder="Name", name="name",required, value=loggedInUser.name)
    input(type="email" placeholder="email", name="email",required, value=loggedInUser.email)
    input(type="text" placeholder="Username", name="username",required, value=loggedInUser.username)
    input(type="text" placeholder="Location", name="location",required, value=loggedInUser.location)
    input(type="submit" value="Update profile")
    if !loggedInUser.socialOnly
      hr
      a(href="change-password") change password &rarr;